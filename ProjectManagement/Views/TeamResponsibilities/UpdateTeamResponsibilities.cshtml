@model List<ProjectManagement.Models.Employee>
@{
    ViewBag.Title = "UpdateTeamResponsibilities";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    var employeeRoles = (List<ProjectManagement.Models.ProjectTeamRole>)ViewData["employeeRoles"];
    var employeeResponsibilites = (List<ProjectManagement.Models.ProjectTeamResponsibilite>)ViewData["employeeResponsibilites"];
}


<div class="container-fluid" style="width:100%;">
    <div style="background: #f8f8f8; border-radius: 4px;">
        <div class="col-md-12 headd">
            EMPLOYEE RESPONSIBILITES
        </div>
        <div id="London" class="tabcontent active" style="display:block; width:65%; margin-left:10px;">
            Roles
            @for (int i = 0; i < employeeRoles.Count; i++)
            {
                using (Html.BeginForm("UpdateRoles", "TeamResponsibilities", FormMethod.Post, new { enctype = "multipart/form-data", data_toggle = "validator" }))
                {
                    <input type="hidden" value="@employeeRoles[i].Id" name="Id" />
                    <input type="hidden" value="@employeeRoles[i].EmployeeId" name="EmployeeId" />
                    <input type="hidden" value="@employeeRoles[i].ProjectId" name="ProjectId" />
                    <div class="col-md-12 form-fill">
                        <div class="col-md-8 from-group">
                            <div class="input-group">
                                <input type="text" class="form-control" name="Role" placeholder="role"  value="@employeeRoles[i].Role" required>
                                <span class="input-group-addon danger"><button type="submit">Update</button></span>
                                @*<span class="input-group-addon danger"><a href="#">Delete</a></span>*@
                            </div>
                        </div>
                    </div>
                }
            }
            <hr />
            Responsibilities
            @for (int i = 0; i < employeeResponsibilites.Count; i++)
            {
                using (Html.BeginForm("UpdateResponsibilites", "TeamResponsibilities", FormMethod.Post, new { enctype = "multipart/form-data", data_toggle = "validator" }))
                {
                    <input type="hidden" value="@employeeResponsibilites[i].Id" name="Id" />
                    <input type="hidden" value="@employeeResponsibilites[i].EmployeeId" name="EmployeeId" />
                    <input type="hidden" value="@employeeResponsibilites[i].ProjectId" name="ProjectId" />
                    <div class="col-md-12 form-fill">
                        <div class="col-md-8 from-group">
                            <div class="input-group">
                                <input type="text" class="form-control" name="Responsibilities" placeholder="responsibilites"  value="@employeeResponsibilites[i].Responsibilities" required>
                                <span class="input-group-addon danger"><button type="submit">Update</button></span>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>