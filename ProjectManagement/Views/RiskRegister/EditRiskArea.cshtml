@model List<ProjectManagement.Models.RiskArea>
@{
    ViewBag.Title = "EditRiskArea";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    int id = (int)ViewData["id"];
}

<div class="container-fluid" style="width:100%;">
    <div style="background: #f8f8f8; border-radius: 4px;">
        <div class="col-md-12 headd">
            EDIT RISK AREA
        </div>

        <div id="London" class="tabcontent active" style="display:block; width:65%; margin-left:10px;">
            @foreach (var item in Model)
            {
                <div class="col-md-12 form-fill">
                    <div class="col-md-8">
                        @using (Html.BeginForm("UpdateRiskArea", "RiskRegister", FormMethod.Post, new { enctype = "multipart/form-data", data_toggle = "validator" }))
                        {
                            <input type="hidden" value="@id" name="RiskRegisterId" />
                            <input type="hidden" value="@item.Id" name="Id" />
                            <div class="input-group">
                                <input type="text" class="form-control" id="RiskAreas" required="required" name="RiskAreas" value="@item.RiskAreas">
                                <div class="input-group-btn">
                                    <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-pencil"></i></button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
            <div class="col-md-12 form-fill">
                <div class="col-md-4 button-form">
                    <a href='javascript:history.go(-1)' class="create-acc">Go Back to Previous Page</a>
                </div>
            </div>

        </div>
    </div>
</div>

