<html>
<head>
    <title>Login page</title>
    <link href="~/assets/css/change-password.css" rel="stylesheet" />
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/assets/js/bootstrap.min.js"></script>
    <script src="~/assets/js/jquery-2.1.4.min.js"></script>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4 text-center">
                <div class="search-box">
                    <div class="caption">
                        <h3>Change password</h3>
                        @*<p>Find to All</p>*@
                    </div>
                    @using (Html.BeginForm("ActiveAccount", "Account", FormMethod.Post))
                    {
                        <input type="hidden" name="Id" value="@ViewData["id"]" />
                        <div class="input-group">
                            <b>Password</b><br />
                            <input type="password" id="paw" name="Password" class="form-control" placeholder="Password">
                            <b>Confirm Password</b><br />
                            <input type="password" id="pass" class="form-control" placeholder="Re-password"><br />
                            <p style="color: red" id="passMatch"></p>
                            <input type="submit" id="submit" class="form-control" value="Submit">
                        </div>
                    }
                </div>
            </div>
            <div class="col-md-4">
                <div class="aro-pswd_info">
                    <div id="pswd_info">
                        <h4>Password must be requirements</h4>
                        <ul>
                            <li id="letter" class="invalid">At least <strong>one letter</strong></li>
                            <li id="capital" class="invalid">At least <strong>one capital letter</strong></li>
                            <li id="number" class="invalid">At least <strong>one number</strong></li>
                            <li id="length" class="invalid">Be at least <strong>8 characters</strong></li>
                            <li id="space" class="invalid">be<strong> use [~,!,@@,#,$,%,^,&,*,-,=,.,;,']</strong></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            var disableButton = true;

            $('#paw').keyup(function () {
                var pswd = $(this).val();

                //validate the length
                if (pswd.length < 8) {
                    $('#length').removeClass('valid').addClass('invalid');
                    disableButton = true;
                } else {
                    $('#length').removeClass('invalid').addClass('valid');
                    disableButton = false;
                }

                //validate letter
                if (pswd.match(/[A-z]/)) {
                    $('#letter').removeClass('invalid').addClass('valid');
                    disableButton = false;
                } else {
                    $('#letter').removeClass('valid').addClass('invalid');
                    disableButton = true;
                }

                //validate capital letter
                if (pswd.match(/[A-Z]/)) {
                    $('#capital').removeClass('invalid').addClass('valid');
                    disableButton = false;
                } else {
                    $('#capital').removeClass('valid').addClass('invalid');
                    disableButton = true;
                }

                //validate number
                if (pswd.match(/\d/)) {
                    $('#number').removeClass('invalid').addClass('valid');
                    disableButton = false;
                } else {
                    $('#number').removeClass('valid').addClass('invalid');
                    disableButton = true;
                }

                //validate space
                if (pswd.match(/[^a-zA-Z0-9\-\/]/)) {
                    $('#space').removeClass('invalid').addClass('valid');
                    disableButton = false;
                } else {
                    $('#space').removeClass('valid').addClass('invalid');
                    disableButton = true;
                }

                if (disableButton) {
                    $("#submit").attr('disabled', 'disabled');
                } else {
                    $('#submit').removeAttr('disabled');
                }

                //if (!$("#pass").val()) {
                //    disableButton = true;
                //}



            }).focus(function () {
                $('#pswd_info').show();
            }).blur(function () {
                $('#pswd_info').hide();
            });

            $("#pass").keyup(function () {
                var pass = $("#paw").val();
                var rePass = $("#pass").val();

                if (pass != rePass) {
                    disableButton = true;
                    $("#passMatch").html("Password didn't match");
                } else {
                    disableButton = false;
                }

                if (disableButton) {
                    $("#submit").attr('disabled', 'disabled');
                } else {
                    $('#submit').removeAttr('disabled');
                    $("#passMatch").html("");
                }
            });
        });
    </script>
</body>
</html>


